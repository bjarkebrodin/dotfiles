[user]
	name = bjal
	email = bjal@itu.dk
[core]
	editor = vim
[credential]
	helper = osxkeychain
[init]
  defaultBranch = main
[alias]
	lg = log -10 --pretty=format:\"%Cred%h %C(auto,yellow)%an %Cgreen%s\"
  co = checkout
  cm = commit
  st = status -bs
  remove = rm --cached
  update = add -u
  conf = config --global
  last = lg -1 HEAD
  unstage = reset HEAD --
[merge]
	tool = vimdiff
  conflictstyle = diff3
[mergetool]
	prompt = false
[pull]
	rebase = true
