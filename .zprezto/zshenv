# Ensure that a non-login, non-interactive shell has a defined environment.
if [[ ( "$SHLVL" -eq 1 && ! -o LOGIN ) && -s "${ZDOTDIR:-$HOME}/.zprofile" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprofile"
fi

# todo: gather path vars in array and export in batch

# kattis and more
export algo="$HOME/Algorithms"
export kattis="$algo/Kattis"
export PATH="$PATH:$kattis/bin/"


# dotnet tools
export PATH="$PATH:$HOME/.dotnet/tools/"

# cargo
export PATH="$PATH:$HOME/.cargo/bin/"

# python
export PATH="$PATH:$HOME/Library/Python/*/bin/"

# postgresql
export PATH="$PATH:/Applications/Postgres.app/Contents/Versions/13/bin"
export PGUSER="postgres"

# classpath appendices
export CLASSPATH="$CLASSPATH:$HOME/Library/Jar/"
